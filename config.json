{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "design-tokens.css",
          "format": "css/variables"
        }
      ]
    },
    "javascript-module": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "design-tokens.json",
          "format": "json/nested"
        }
      ]
    }
  }
}
